{% extends 'base.html.twig' %}

{% block title %}Ajouter un film{% endblock %}

{% block body %}

<div class="container">
    <h2 class="row m-md-5 text-center">Formulaire pour ajouter un film ou une s√©rie</h2>
</div>

<div class="container">

    <div class="row">

        <div class="col-6">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="col-lg-6">
                {{ form_row(form.title) }}
                {{ form_widget(form.save, { 'label': 'Ajouter' }) }}
            </div>

            {{ form_end(form) }}
        </div>

        {# si un film est transmis on l'affiche #}
        {% if movie is defined and movie is not null %}

            {{ include('home/show.html.twig') }}

        {% endif %}

    </div>
</div>

{% endblock %}
